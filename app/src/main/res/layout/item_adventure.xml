<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp" >

    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@color/primary_text_default_material_light"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/goButtonImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@color/highlighted_text_material_dark"


        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@id/goButtonImage"
        android:layout_toRightOf="@id/placeImage"

        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/placeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/placeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        android:padding="5dp"
        android:textSize="15sp"

        />
</LinearLayout>
</RelativeLayout>
